{
  "name": "password-builder",
  "version": "3.1.0",
  "description": "Lightweight password hashing tool using native node crypto module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "ci:audit:run": "npm audit --audit-level=low",
    "ci:pckg:build": "tsc --project ./tsconfig.pckg.json",
    "ci:test:run": "node --test ./dist/test.js",
    "ci:test:build": "tsc --project ./tsconfig.test.json",
    "ci:pckg:clean": "clean-package"
  },
  "keywords": [
    "password",
    "crypto",
    "node",
    "password hashing",
    "password hashing tool",
    "password hashing library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aronep6/password-builder.git"
  },
  "engines": {
    "node": ">=4.x"
  },
  "clean-package": {
    "remove": [
      "clean-package",
      "scripts",
      "devDependencies"
    ]
  },
  "author": {
    "name": "aronep6",
    "url": "https://caze.ousmanedev.fr"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.4.7",
    "clean-package": "^2.2.0",
    "typescript": "^5.1.6"
  }
}
